{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "address.schema.json",
  "title": "Address",
  "type": "object",
  "description": "Physical address",
  "properties": {
    "street": {
      "type": "string"
    },
    "city": {
      "type": "string"
    },
    "state": {
      "type": "string"
    },
    "zipCode": {
      "type": "string",
      "pattern": "^[0-9]{5}(-[0-9]{4})?$"
    },
    "country": {
      "$ref": "../country/country.schema.json"
    }
  },
  "required": ["street", "city", "country"]
}
