{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "permission.schema.json",
  "title": "Permission",
  "type": "object",
  "description": "Individual permission",
  "properties": {
    "resource": {
      "type": "string",
      "description": "Resource type (e.g., 'users', 'posts', 'comments')"
    },
    "action": {
      "type": "string",
      "enum": ["create", "read", "update", "delete"]
    },
    "scope": {
      "type": "string",
      "enum": ["own", "all"],
      "description": "Scope of the permission"
    }
  },
  "required": ["resource", "action", "scope"]
}
