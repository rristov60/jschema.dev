{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "country.schema.json",
  "title": "Country",
  "type": "object",
  "description": "Country information",
  "properties": {
    "code": {
      "type": "string",
      "pattern": "^[A-Z]{2}$",
      "description": "ISO 3166-1 alpha-2 country code"
    },
    "name": {
      "type": "string"
    },
    "currency": {
      "$ref": "../currency/currency.schema.json"
    }
  },
  "required": ["code", "name"]
}
