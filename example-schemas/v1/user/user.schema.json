{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "user.schema.json",
  "title": "User",
  "type": "object",
  "description": "A user in the system",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the user"
    },
    "username": {
      "type": "string",
      "minLength": 3,
      "maxLength": 50,
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "profile": {
      "$ref": "../profile/profile.schema.json"
    },
    "roles": {
      "type": "array",
      "items": {
        "$ref": "../role/role.schema.json"
      }
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "settings": {
      "$ref": "../settings/user-settings.schema.json"
    }
  },
  "required": ["id", "username", "email"]
}
